<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Кисти -->
    <SolidColorBrush x:Key="PrimaryBackground" Color="#FFD898FA"/>
    <SolidColorBrush x:Key="SectionBackground" Color="White"/>
    <SolidColorBrush x:Key="ColumnBackground" Color="White"/>
    <SolidColorBrush x:Key="TaskBackground" Color="White"/>
    <SolidColorBrush x:Key="PrimaryBrush" Color="#FFD898FA"/>
    <SolidColorBrush x:Key="LightBrush" Color="#f0d6ff"/>
    <SolidColorBrush x:Key="DarkBrush" Color="#8a4aca"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#ff6b6b"/>

    <!-- Стили границ -->
    <Style x:Key="SectionBorder" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SectionBackground}"/>
        <Setter Property="Margin" Value="5,10,8,10"/>
        <Setter Property="CornerRadius" Value="40"/>
        <Setter Property="Padding" Value="15"/>
    </Style>
    <!-- Стили для колонок в боарде-->
    <Style x:Key="ColumnBorder" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource ColumnBackground}"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Width" Value="250"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#dee2e6"/>
    </Style>
    <!--Стили для задач-->
    <Style x:Key="TaskBorder" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource TaskBackground}"/>
        <Setter Property="Margin" Value="0,5"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="CornerRadius" Value="50"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#e9ecef"/>
    </Style>

    <!-- Стили текста -->
    <Style x:Key="SectionHeader" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <Style x:Key="ColumnHeader" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="ProjectItemText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="2"/>
    </Style>

    <Style x:Key="TaskItemText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Margin" Value="15,2,2,2"/>
    </Style>

    <Style x:Key="TaskTitle" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,0,0,5"/>
    </Style>

    <Style x:Key="TaskDescription" TargetType="TextBlock">
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="Foreground" Value="#6c757d"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

    <!-- Стили кнопок -->
    <Style x:Key="AddButton" TargetType="Button">
        <Setter Property="Width" Value="30"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Background" Value="#FFD898FA"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
    </Style>

    <Style x:Key="SmallAddButton" TargetType="Button">
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Background" Value="#FFD898FA"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <Style x:Key="AddTaskButton" TargetType="Button">
        <Setter Property="Margin" Value="0,10,0,0"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Background" Value="#FFD898FA"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <Style x:Key="IconButton" TargetType="Button">
        <Setter Property="Width" Value="25"/>
        <Setter Property="Height" Value="25"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <!-- Стили элементов управления -->
    <Style x:Key="ProjectsTreeView" TargetType="TreeView">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="0,10,0,0"/>
    </Style>

    <Style x:Key="TasksItemsControl" TargetType="ItemsControl">
        <Setter Property="Margin" Value="0,10,0,0"/>
    </Style>

    <Style x:Key="VerticalGridSplitter" TargetType="GridSplitter">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Width" Value="5"/>
        <Setter Property="ResizeBehavior" Value="PreviousAndNext"/>
        <Setter Property="ResizeDirection" Value="Columns"/>
    </Style>

</ResourceDictionary>