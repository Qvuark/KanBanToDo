<Window x:Class="KanbanToDo.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:KanbanToDo.Views.UserControls"
        Title="Kanban ToDo" Height="750" Width="1200">

    <Grid Background="{StaticResource PrimaryBackground}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" MinWidth="150" MaxWidth="300"/>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="9*" MinWidth="600"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>

        <!-- Левая панель - Проекты -->
        <components:ProjectsTree Grid.Column="0" Grid.RowSpan="2"/>

        <!-- Разделитель -->
        <GridSplitter Grid.Column="1" Grid.RowSpan="2"
                      Width="5" HorizontalAlignment="Stretch"
                      Style="{StaticResource VerticalGridSplitter}"/>

        <!-- Верхняя правая панель - Переключатель представлений -->
        <Border Grid.Column="2" Grid.Row="0">
            <components:ViewModeSelector/>
        </Border>

        <!-- Правая панель - Колонки задач -->
        <Border Grid.Column="2" Grid.Row="1">
            <components:KanbanBoard/>
        </Border>
    </Grid>
</Window>
