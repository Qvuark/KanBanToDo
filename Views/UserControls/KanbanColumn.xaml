<UserControl x:Class="KanbanToDo.Views.UserControls.KanbanColumn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="clr-namespace:KanbanToDo.Views.UserControls">
    <Border Style="{StaticResource ColumnBorder}">
        <DockPanel>
            <TextBlock Text="{Binding Title}" 
                       Style="{StaticResource ColumnHeader}"/>

            <Button Content="+ Новая задача" 
                    Command="{Binding AddNewTaskCommand}"
                    Style="{StaticResource AddTaskButton}"
                    DockPanel.Dock="Bottom"/>

            <ItemsControl ItemsSource="{Binding Tasks}" 
                          Style="{StaticResource TasksItemsControl}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <components:TaskCard/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </DockPanel>
    </Border>
</UserControl>
