<UserControl x:Class="KanbanToDo.Views.UserControls.TaskCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Style="{StaticResource TaskBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="{Binding Title}" 
                       Style="{StaticResource TaskTitle}"/>

            <TextBlock Text="{Binding Description}" 
                       Grid.Row="1"
                       Style="{StaticResource TaskDescription}"/>

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        Grid.Row="2">
                <Button Content="✏" 
                        Command="{Binding EditCommand}"
                        Style="{StaticResource IconButton}"/>
                <Button Content="❌" 
                        Command="{Binding DeleteCommand}"
                        Style="{StaticResource IconButton}"/>
                <Button Content="➡" 
                        Command="{Binding MoveRightCommand}"
                        Style="{StaticResource IconButton}"/>
                <Button Content="⬅" 
                        Command="{Binding MoveLeftCommand}"
                        Style="{StaticResource IconButton}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
